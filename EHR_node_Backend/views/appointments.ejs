<%- include('layouts/header'); %>
<div class="container mx-auto mt-6">
  <h2 class="text-2xl font-bold mb-4">Appointments</h2>

  <form action="/appointment/book" method="POST" class="mb-4">
    <input type="text" name="patientName" placeholder="Patient Name" required class="border p-2">
    <input type="text" name="doctor" placeholder="Doctor Name" required class="border p-2">
    <input type="date" name="date" required class="border p-2">
    <input type="time" name="time" required class="border p-2">
    <button type="submit" class="bg-blue-500 text-white px-4 py-2">Book Appointment</button>
  </form>

  <table class="table-auto w-full border-collapse border border-gray-400">
    <tr class="bg-gray-200">
      <th class="border p-2">Patient Name</th>
      <th class="border p-2">Doctor</th>
      <th class="border p-2">Date</th>
      <th class="border p-2">Time</th>
      <th class="border p-2">Actions</th>
    </tr>
    <% appointments.forEach(appointment => { %>
      <tr>
        <td class="border p-2"><%= appointment.patientName %></td>
        <td class="border p-2"><%= appointment.doctor %></td>
        <td class="border p-2"><%= appointment.date %></td>
        <td class="border p-2"><%= appointment.time %></td>
        <td class="border p-2">
          <a href="/appointment/cancel/<%= appointment.id %>" class="text-red-500">Cancel</a>
        </td>
      </tr>
      <script src="https://cdn.tailwindcss.com"></script>

    <% }); %>
  </table>
</div>
