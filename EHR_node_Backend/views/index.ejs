<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>EHR Management</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <%- include('layouts/main', {title: 'Home'}) %>

  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to EHR Management System</h1>
      <p class="text-xl text-gray-600">Streamline your healthcare management with our comprehensive solution</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      <!-- Quick Access Cards -->
      <a href="/patient" class="transform hover:scale-105 transition-transform duration-200">
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg">
          <div class="text-blue-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Patients</h3>
          <p class="text-gray-600">Manage patient records and information</p>
        </div>
      </a>

      <a href="/appointment" class="transform hover:scale-105 transition-transform duration-200">
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg">
          <div class="text-green-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Appointments</h3>
          <p class="text-gray-600">Schedule and manage appointments</p>
        </div>
      </a>

      <a href="/medicalrecords" class="transform hover:scale-105 transition-transform duration-200">
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg">
          <div class="text-purple-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Medical Records</h3>
          <p class="text-gray-600">Access and update medical records</p>
        </div>
      </a>

      <a href="/reports" class="transform hover:scale-105 transition-transform duration-200">
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg">
          <div class="text-red-600 mb-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Reports</h3>
          <p class="text-gray-600">Generate and view medical reports</p>
        </div>
      </a>
    </div>
  </div>
  
  <!-- Today's Appointments -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">Today's Appointments</h5>
        </div>
        <div class="card-body">
          <% if (todayAppointments && todayAppointments.length > 0) { %>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Patient</th>
                  <th>Doctor</th>
                  <th>Time</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% todayAppointments.forEach(appointment => { %>
                  <tr>
                    <td><%= appointment.patientName %></td>
                    <td><%= appointment.doctor %></td>
                    <td><%= appointment.time %></td>
                    <td>
                      <a href="/appointment/cancel/<%= appointment.id %>" class="btn btn-sm btn-danger btn-action">Cancel</a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-center">No appointments scheduled for today.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>