<%- include('layouts/header'); %>
<div class="container mx-auto mt-6">
  <h2 class="text-2xl font-bold mb-4">Patients</h2>
  
  <form action="/patient/add" method="POST" class="mb-4">
    <input type="text" name="name" placeholder="Name" required class="border p-2">
    <input type="number" name="age" placeholder="Age" required class="border p-2">
    <input type="text" name="gender" placeholder="Gender" required class="border p-2">
    <input type="text" name="contact" placeholder="Contact" required class="border p-2">
    <button type="submit" class="bg-blue-500 text-white px-4 py-2">Add Patient</button>
  </form>

  <table class="table-auto w-full border-collapse border border-gray-400">
    <tr class="bg-gray-200">
      <th class="border p-2">Name</th>
      <th class="border p-2">Age</th>
      <th class="border p-2">Gender</th>
      <th class="border p-2">Contact</th>
      <th class="border p-2">Actions</th>
    </tr>
    <% patients.forEach(patient => { %>
      <tr>
        <td class="border p-2"><%= patient.name %></td>
        <td class="border p-2"><%= patient.age %></td>
        <td class="border p-2"><%= patient.gender %></td>
        <td class="border p-2"><%= patient.contact %></td>
        <td class="border p-2">
          <a href="/patient/delete/<%= patient.id %>" class="text-red-500">Delete</a>
        </td>
      </tr>
    <% }); %>
    <script src="https://cdn.tailwindcss.com"></script>

  </table>
</div>
