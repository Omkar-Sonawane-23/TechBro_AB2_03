<form action="/add" method="POST" class="max-w-lg mx-auto bg-white p-6 rounded shadow">
    <input type="text" name="name" placeholder="Name" required class="border p-2 w-full mb-2">
    <input type="number" name="age" placeholder="Age" required class="border p-2 w-full mb-2">
    <input type="text" name="gender" placeholder="Gender" required class="border p-2 w-full mb-2">
    <input type="text" name="blood_type" placeholder="Blood Type" class="border p-2 w-full mb-2">
    <input type="text" name="diagnoses" placeholder="Diagnoses (comma-separated)" class="border p-2 w-full mb-2">
    <input type="text" name="medications" placeholder="Medications" class="border p-2 w-full mb-2">
    <input type="text" name="allergies" placeholder="Allergies" class="border p-2 w-full mb-2">
    <input type="date" name="last_visit" required class="border p-2 w-full mb-2">
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Save</button>
</form>
<script src="https://cdn.tailwindcss.com"></script>
