<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Reports & Analytics</h1>
    <p class="mt-2 text-gray-600">Comprehensive overview of healthcare metrics</p>
  </div>
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <!-- Patients Card -->
    <div class="bg-blue-600 rounded-xl shadow-lg transform transition hover:scale-105">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <svg class="w-8 h-8 text-blue-100" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
          </svg>
          <span class="text-blue-200 text-sm">Last 30 days</span>
        </div>
        <h2 class="mt-4 text-4xl font-bold text-white"><%= totalPatients %></h2>
        <p class="mt-2 text-blue-100">Registered patients</p>
      </div>
    </div>

    <!-- Appointments Card -->
    <div class="bg-emerald-600 rounded-xl shadow-lg transform transition hover:scale-105">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <svg class="w-8 h-8 text-emerald-100" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
          <span class="text-emerald-200 text-sm">Scheduled</span>
        </div>
        <h2 class="mt-4 text-4xl font-bold text-white"><%= totalAppointments %></h2>
        <p class="mt-2 text-emerald-100">Appointments</p>
      </div>
    </div>

    <!-- Doctors Card -->
    <div class="bg-cyan-600 rounded-xl shadow-lg transform transition hover:scale-105">
      <div class="p-6">
        <div class="flex items-center justify-between">
          <svg class="w-8 h-8 text-cyan-100" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
          </svg>
          <span class="text-cyan-200 text-sm">Medical staff</span>
        </div>
        <h2 class="mt-4 text-4xl font-bold text-white"><%= totalDoctors %></h2>
        <p class="mt-2 text-cyan-100">Healthcare professionals</p>
      </div>
    </div>
  </div>

  <!-- Detailed Reports -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900">System Statistics</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Metric</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Value</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Total Patients</td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500"><%= totalPatients %></td>
          </tr>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Total Appointments</td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500"><%= totalAppointments %></td>
          </tr>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Total Doctors</td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500"><%= totalDoctors %></td>
          </tr>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Patient to Doctor Ratio</td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500">
              <% if(totalDoctors > 0) { %>
                <%= (totalPatients / totalDoctors).toFixed(2) %>:1
              <% } else { %>
                N/A
              <% } %>
            </td>
          </tr>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Average Appointments per Patient</td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-500">
              <% if(totalPatients > 0) { %>
                <%= (totalAppointments / totalPatients).toFixed(2) %>
              <% } else { %>
                N/A
              <% } %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>