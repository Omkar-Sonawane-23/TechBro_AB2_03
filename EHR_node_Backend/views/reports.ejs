<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reports & Analytics</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <h1 class="text-3xl font-bold text-center mb-4">Clinic Reports & Analytics</h1>
    
    <div class="grid grid-cols-3 gap-4">
        <div class="bg-white p-4 shadow rounded-lg">
            <h2 class="text-xl font-semibold">Total Patients</h2>
            <p class="text-2xl"><%= totalPatients %></p>
        </div>
        <div class="bg-white p-4 shadow rounded-lg">
            <h2 class="text-xl font-semibold">Total Appointments</h2>
            <p class="text-2xl"><%= totalAppointments %></p>
        </div>
        <div class="bg-white p-4 shadow rounded-lg">
            <h2 class="text-xl font-semibold">Total Doctors</h2>
            <p class="text-2xl"><%= totalDoctors %></p>
        </div>
    </div>

    <h2 class="text-2xl font-bold mt-6">Appointments Per Doctor</h2>
    <table class="w-full mt-2 border-collapse border border-gray-300">
        <tr class="bg-gray-200">
            <th class="border px-4 py-2">Doctor</th>
            <th class="border px-4 py-2">Appointments</th>
        </tr>
        <% Object.keys(appointmentsPerDoctor).forEach(doctor => { %>
        <tr class="bg-white">
            <td class="border px-4 py-2"><%= doctor %></td>
            <td class="border px-4 py-2"><%= appointmentsPerDoctor[doctor] %></td>
        </tr>
        <% }) %>
    </table>

    <h2 class="text-2xl font-bold mt-6">Patient Age Distribution</h2>
    <ul class="list-disc pl-6">
        <% Object.keys(ageGroups).forEach(group => { %>
            <li><%= group %>: <%= ageGroups[group] %> patients</li>
        <% }) %>
    </ul>
    <script src="https://cdn.tailwindcss.com"></script>

</body>
</html>
