<div class="row mb-4">
    <div class="col-md-12">
      <h1>Reports & Analytics</h1>
    </div>
  </div>
  
  <!-- Summary Cards -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card text-white bg-primary mb-3 dashboard-card">
        <div class="card-header">Total Patients</div>
        <div class="card-body">
          <h1 class="card-title display-4"><%= totalPatients %></h1>
          <p class="card-text">Registered patients in the system</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-white bg-success mb-3 dashboard-card">
        <div class="card-header">Total Appointments</div>
        <div class="card-body">
          <h1 class="card-title display-4"><%= totalAppointments %></h1>
          <p class="card-text">Scheduled appointments</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card text-white bg-info mb-3 dashboard-card">
        <div class="card-header">Total Doctors</div>
        <div class="card-body">
          <h1 class="card-title display-4"><%= totalDoctors %></h1>
          <p class="card-text">Medical staff</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Detailed Reports -->
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header bg-light">
          <h5 class="mb-0">System Statistics</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead class="table-light">
                <tr>
                  <th>Metric</th>
                  <th>Value</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Total Patients</td>
                  <td><%= totalPatients %></td>
                </tr>
                <tr>
                  <td>Total Appointments</td>
                  <td><%= totalAppointments %></td>
                </tr>
                <tr>
                  <td>Total Doctors</td>
                  <td><%= totalDoctors %></td>
                </tr>
                <tr>
                  <td>Patient to Doctor Ratio</td>
                  <td>
                    <% if(totalDoctors > 0) { %>
                      <%= (totalPatients / totalDoctors).toFixed(2) %>:1
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                </tr>
                <tr>
                  <td>Average Appointments per Patient</td>
                  <td>
                    <% if(totalPatients > 0) { %>
                      <%= (totalAppointments / totalPatients).toFixed(2) %>
                    <% } else { %>
                      N/A
                    <% } %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>