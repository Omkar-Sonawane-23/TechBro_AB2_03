<!DOCTYPE html>
<html lang="en">
<head>
    <title>Lab Tests</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
    <h1 class="text-3xl font-bold text-center mb-4">Lab Tests</h1>
    <a href="/lab-tests/add" class="bg-blue-500 text-white px-4 py-2 rounded">Add Lab Test</a>
    <table class="w-full mt-4 border-collapse border border-gray-300">
        <tr class="bg-gray-200">
            <th class="border px-4 py-2">Patient</th>
            <th class="border px-4 py-2">Doctor</th>
            <th class="border px-4 py-2">Test</th>
            <th class="border px-4 py-2">Status</th>
            <th class="border px-4 py-2">Actions</th>
        </tr>
        <% labTests.forEach(test => { %>
        <tr class="bg-white">
            <td class="border px-4 py-2"><%= test.patient_name %></td>
            <td class="border px-4 py-2"><%= test.doctor_name %></td>
            <td class="border px-4 py-2"><%= test.test_name %></td>
            <td class="border px-4 py-2"><%= test.status %></td>
            <td class="border px-4 py-2">
                <a href="/lab-tests/<%= test.id %>" class="text-blue-500">View</a>
                <% if (test.resultFile) { %>
                    | <a href="/lab-tests/download/<%= test.resultFile %>" class="text-green-500">Download Result</a>
                <% } %>
            </td>
        </tr>
        <% }) %>
    </table>
</body>
</html>
